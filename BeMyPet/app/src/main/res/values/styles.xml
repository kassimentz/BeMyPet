<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BeMyPetTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:colorForeground">@color/background_material_light</item>
        <item name="colorPrimaryDark">@color/abc_tint_switch_track</item>
        <item name="colorAccent">@color/lilas</item>
        <item name="colorPrimary">@color/anakiwaDarker</item>
        <item name="android:textColorSecondary">@color/anakiwaDarker</item>
        <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
    </style>

    <style name="BeMyPetTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/anakiwa</item>
        <item name="colorPrimaryDark">@color/ebonyClay</item>
        <item name="colorAccent">@color/orangePeel</item>
    </style>

    <style name="CustomFontStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:capitalize">characters</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="TextLabel" parent="Theme.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/anakiwaDarker</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/anakiwaDarker</item>
        <item name="colorControlNormal">@color/anakiwa</item>
        <item name="colorControlActivated">@color/lilas</item>
    </style>

    <style name="BeMyPetTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="BeMyPetTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
