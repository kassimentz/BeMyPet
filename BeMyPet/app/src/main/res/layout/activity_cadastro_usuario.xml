<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context=".CadastroUsuario"
        android:background="@color/windowBackground">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:orientation="vertical" >

        <android.support.v7.widget.Toolbar
            android:id="@+id/cadastroUsuarioToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/submenu_usuario"
                    android:id="@+id/textView"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@color/anakiwaDarker"
                    android:textAlignment="center"
                    android:textSize="28dp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_nome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel">

                    <EditText
                        style="@style/CustomFontStyle"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/txtNomeUsuario"
                        android:drawableLeft="@android:drawable/ic_menu_sort_alphabetically"
                        android:hint="@string/nome"
                        android:layout_marginTop="5dp"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_cpf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel">

                    <EditText
                        style="@style/CustomFontStyle"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/txtCpfUsuario"
                        android:drawableLeft="@android:drawable/ic_menu_sort_alphabetically"
                        android:hint="@string/cpf"
                        android:layout_marginTop="5dp"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_logradouro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel">

                    <EditText
                        style="@style/CustomFontStyle"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/txtLogradouroUsuario"
                        android:drawableLeft="@android:drawable/ic_menu_sort_alphabetically"
                        android:hint="@string/logradouro"
                        android:layout_marginTop="5dp"/>

                </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:weightSum="2" >

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_nro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:layout_weight="1">

                    <EditText
                        style="@style/CustomFontStyle"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/txtLogradouroNroUsuario"
                        android:drawableLeft="@android:drawable/ic_menu_sort_alphabetically"
                        android:hint="@string/nro_lougradouro"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_complemento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:layout_weight="1">

                    <EditText
                        style="@style/CustomFontStyle"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/txtLogradouroComplementoUsuario"
                        android:drawableLeft="@android:drawable/ic_menu_sort_alphabetically"
                        android:hint="@string/complemento"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:weightSum="2" >

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_bairro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:layout_weight="1">

                    <EditText
                        style="@style/CustomFontStyle"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/txtBairroUsuario"
                        android:drawableLeft="@android:drawable/ic_menu_sort_alphabetically"
                        android:hint="@string/bairro"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_cidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:layout_weight="1">

                    <EditText
                        style="@style/CustomFontStyle"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/txtCidadeUsuario"
                        android:drawableLeft="@android:drawable/ic_menu_sort_alphabetically"
                        android:hint="@string/cidade"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:weightSum="2" >

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_estado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:layout_weight="1">

                    <EditText
                        style="@style/CustomFontStyle"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/txtEstadoUsuario"
                        android:drawableLeft="@android:drawable/ic_menu_sort_alphabetically"
                        android:hint="@string/estado"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_pais"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:layout_weight="1">

                    <EditText
                        style="@style/CustomFontStyle"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/txtPaisUsuario"
                        android:drawableLeft="@android:drawable/ic_menu_sort_alphabetically"
                        android:hint="@string/pais"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:weightSum="2" >

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_cep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:layout_weight="1">

                    <EditText
                        style="@style/CustomFontStyle"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/txtCepUsuario"
                        android:drawableLeft="@android:drawable/ic_menu_sort_alphabetically"
                        android:hint="@string/cep"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_telefone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:layout_weight="1">

                    <EditText
                        style="@style/CustomFontStyle"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/txtTelefoneUsuario"
                        android:drawableLeft="@android:drawable/ic_menu_sort_alphabetically"
                        android:hint="@string/telefone"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel">

                <EditText
                    style="@style/CustomFontStyle"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/txtEmailUsuario"
                    android:drawableLeft="@android:drawable/ic_menu_sort_alphabetically"
                    android:hint="@string/email"
                    android:layout_marginTop="5dp"/>

            </android.support.design.widget.TextInputLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>
