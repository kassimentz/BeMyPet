<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".VisualizarNotificacaoPadrao"
    android:background="@color/windowBackground">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:orientation="vertical" >

        <android.support.v7.widget.Toolbar
            android:id="@+id/notificacoesPadraoToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/dados_notificacao"
                    android:id="@+id/textView"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@color/anakiwaDarker"
                    android:textAlignment="center"
                    android:textSize="28dp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"/>



                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <TextView
                        style="@style/CustomFontStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/lblDataNotificacao"
                        android:text="@string/data_notificacao"
                        android:textSize="18dp"
                        android:textColor="@color/anakiwaDarker"
                        android:layout_weight=".5"/>


                    <TextView
                        style="@style/CustomFontStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/lblStatusNotificacao"
                        android:text="@string/status_notificacao"
                        android:textSize="18dp"
                        android:textColor="@color/anakiwaDarker"
                        android:layout_weight=".5"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <TextView
                        style="@style/CustomFontStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtDataNotificacao"
                        android:text="@string/data_notificacao"
                        android:textSize="18dp"
                        android:textColor="@color/anakiwaDarker"
                        android:layout_weight=".5"/>


                    <TextView
                        style="@style/CustomFontStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtStatusNotificacao"
                        android:text="@string/status_notificacao"
                        android:textSize="18dp"
                        android:textColor="@color/anakiwaDarker"
                        android:layout_weight=".5"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <TextView
                        style="@style/CustomFontStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/lblDoador"
                        android:text="@string/doador"
                        android:textSize="18dp"
                        android:textColor="@color/anakiwaDarker"
                        android:layout_weight="0.84"/>


                    <TextView
                        style="@style/CustomFontStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/lblAdotante"
                        android:text="@string/adotante"
                        android:textSize="18dp"
                        android:textColor="@color/anakiwaDarker"
                        android:layout_weight=".5"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <TextView
                        style="@style/CustomFontStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtDoador"
                        android:text="@string/doador"
                        android:textSize="18dp"
                        android:textColor="@color/anakiwaDarker"
                        android:layout_weight="0.85"/>


                    <TextView
                        style="@style/CustomFontStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtAdotante"
                        android:text="@string/adotante"
                        android:textSize="18dp"
                        android:textColor="@color/anakiwaDarker"
                        android:layout_weight=".5"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1" >

                    <TextView
                        style="@style/CustomFontStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/lblPet"
                        android:text="@string/pet"
                        android:textSize="18dp"
                        android:textColor="@color/anakiwaDarker"
                        android:layout_weight="0.32"/>

                    <TextView
                        style="@style/CustomFontStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtPet"
                        android:text="@string/pet"
                        android:textSize="18dp"
                        android:layout_weight=".5"
                        android:textColor="@color/anakiwaDarker"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1" >

                    <ImageView
                        android:id="@+id/imgPet"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_dog"/>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>
