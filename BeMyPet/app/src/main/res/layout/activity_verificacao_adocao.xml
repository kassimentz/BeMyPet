<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".VerificacaoAdocao"
    android:background="@color/windowBackground">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:orientation="vertical" >

        <android.support.v7.widget.Toolbar
            android:id="@+id/verificacaoAdocaoToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/quero_adotar"
                        android:id="@+id/textView"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="@color/anakiwaDarker"
                        android:textAlignment="center"
                        android:textSize="28dp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        style="@style/CustomFontStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/lblTextoVerificacaoAdocao"
                        android:textSize="18dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/abc_primary_text_material_light"
                        android:text="@string/texto_verificacao_adocao"
                        android:textAlignment="center" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp">

                        <RadioGroup
                            android:id="@+id/rgOpcoesTemPets"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                style="@style/CustomFontStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/lblJaTevePets"
                                android:textSize="18dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/anakiwaDarker"
                                android:text="@string/jaTevePets"
                                android:textStyle="bold" />

                            <RadioButton
                                style="@style/CustomFontStyle"
                                android:id="@+id/rbTemPets"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="@string/tenho"
                                android:textSize="18dp"
                                android:textColor="@color/anakiwaDarker"/>

                            <RadioButton
                                style="@style/CustomFontStyle"
                                android:id="@+id/rbNuncaTevePets"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/nunca"
                                android:textSize="18dp"
                                android:textColor="@color/anakiwaDarker"/>

                            <RadioButton
                                style="@style/CustomFontStyle"
                                android:id="@+id/rbJaTevePets"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/jaTive"
                                android:textSize="18dp"
                                android:textColor="@color/anakiwaDarker"/>

                        </RadioGroup>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp">

                        <RadioGroup
                            android:id="@+id/rgOpcoesTemTela"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                style="@style/CustomFontStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/lblTelasJanelas"
                                android:textSize="18dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/anakiwaDarker"
                                android:text="@string/telaNasJanelas"
                                android:textStyle="bold" />

                            <RadioButton
                                style="@style/CustomFontStyle"
                                android:id="@+id/rbTenhoTela"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="@string/sim"
                                android:textSize="18dp"
                                android:textColor="@color/anakiwaDarker"/>

                            <RadioButton
                                style="@style/CustomFontStyle"
                                android:id="@+id/rbNaoTenhoTela"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/nao"
                                android:textSize="18dp"
                                android:textColor="@color/anakiwaDarker"/>

                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
    </LinearLayout>
</LinearLayout>